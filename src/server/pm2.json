{
  "apps": [
    {
      "name": "node-amp-mustache-skeleton",
      "script": "./index.js",
      "env": {
        "NODE_ENV": "dev"
      },
      "env_production": {
        "NODE_ENV": "production"
      },
      "watch": true,
      "watch_options": {
        "awaitWriteFinish": {
          "stabilityThreshold": 10000,
          "pollInterval": 1000
        }
      }
    }
  ]
}
